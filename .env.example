# =============================================================================
# Colorado CareAssist Portal - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git (it's in .gitignore)
#
# Quick Start: cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# CORE PORTAL SETTINGS
# -----------------------------------------------------------------------------

# PostgreSQL Database (main portal)
# Get from: heroku config:get DATABASE_URL -a careassist-unified
DATABASE_URL=postgresql://username:password@localhost:5432/colorado_careassist_portal

# Secret key for session encryption (generate with: python -c "import secrets; print(secrets.token_hex(32))")
APP_SECRET_KEY=your-super-secret-key-change-this-in-production

# Google OAuth (Portal Login)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://careassist-unified-0a11ddb45ac0.herokuapp.com/auth/callback

# Allowed email domains for login (comma-separated)
ALLOWED_DOMAINS=coloradocareassist.com

# -----------------------------------------------------------------------------
# SALES DASHBOARD (mounted at /sales)
# -----------------------------------------------------------------------------

# PostgreSQL Database (sales dashboard - separate database)
SALES_DATABASE_URL=postgresql://username:password@localhost:5432/colorado_careassist_sales

# Google Drive (Business Card Auto-Scanner)
# Get from: https://console.cloud.google.com/iam-admin/serviceaccounts
# Create service account → Download JSON key → Copy entire JSON as one line
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Google Drive Folder ID (Business Cards folder)
# Get from: Drive folder URL https://drive.google.com/drive/folders/YOUR_FOLDER_ID_HERE
GOOGLE_DRIVE_BUSINESS_CARDS_FOLDER_ID=your-google-drive-folder-id

# Brevo Email Marketing
# Get from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=xkeysib-your-brevo-api-key

# QuickBooks Online (Customer Sync to Brevo)
# Get from: https://developer.intuit.com/app/developer/qbo/docs/get-started
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_REALM_ID=your-company-id
QUICKBOOKS_ACCESS_TOKEN=your-access-token
QUICKBOOKS_REFRESH_TOKEN=your-refresh-token

# Gmail API (Email Tracking)
# Get from: https://console.cloud.google.com/apis/credentials
GMAIL_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GMAIL_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}
GMAIL_USER_EMAILS=jacob@coloradocareassist.com,jen@coloradocareassist.com

# -----------------------------------------------------------------------------
# RECRUITING DASHBOARD (mounted at /recruiting)
# -----------------------------------------------------------------------------

# PostgreSQL Database (recruiting dashboard - separate database)
RECRUITING_DATABASE_URL=postgresql://username:password@localhost:5432/colorado_careassist_recruiting

# Facebook Lead Ads (Caregiver Recruitment)
# Get from: https://developers.facebook.com/apps/
FACEBOOK_ACCESS_TOKEN=your-long-lived-facebook-access-token
FACEBOOK_AD_ACCOUNT_ID=act_your-ad-account-id
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_PAGE_ID=your-facebook-page-id

# -----------------------------------------------------------------------------
# GIGI AI VOICE ASSISTANT (/gigi)
# -----------------------------------------------------------------------------

# Anthropic Claude (AI Brain)
# Get from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=your-anthropic-api-key

# Telegram Bot (Gigi Telegram)
# Get from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Google Work Account (Calendar/Email Access for Gigi)
# Get from: https://console.cloud.google.com/apis/credentials
# To get refresh token, run: python scripts/get_google_refresh_token.py
GOOGLE_WORK_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_WORK_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_WORK_REFRESH_TOKEN=your-google-refresh-token

# Retell AI (Voice Agent)
# Get from: https://app.retellai.com/dashboard
RETELL_API_KEY=your-retell-api-key
RETELL_AGENT_ID=your-retell-agent-id

# Google Gemini AI (NLP & Intelligence)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# RingCentral (Phone & SMS)
# Get from: https://developers.ringcentral.com/my-account.html
RINGCENTRAL_CLIENT_ID=your-ringcentral-client-id
RINGCENTRAL_CLIENT_SECRET=your-ringcentral-client-secret
RINGCENTRAL_JWT_TOKEN=your-ringcentral-jwt-token
RINGCENTRAL_SERVER_URL=https://platform.ringcentral.com
RINGCENTRAL_FROM_NUMBER=+17194283999
GIGI_SMS_PROVIDER=ringcentral  # ringcentral or beetexting

# BeeTexting (After-hours SMS)
BEETEXTING_CLIENT_ID=your-beetexting-client-id
BEETEXTING_CLIENT_SECRET=your-beetexting-client-secret
BEETEXTING_API_KEY=your-beetexting-api-key
BEETEXTING_FROM_NUMBER=+1719xxxxxxx
BEETEXTING_API_URL=https://connect.beetexting.com/prod
BEETEXTING_AUTH_URL=https://auth.beetexting.com/oauth2/token/

# After-hours behavior (Mon–Fri 8am–5pm only)
GIGI_SMS_AUTOREPLY_ENABLED=true
GIGI_SMS_AFTER_HOURS_ONLY=true
GIGI_OFFICE_HOURS_START=08:00
GIGI_OFFICE_HOURS_END=17:00

# Gigi Operations SMS (Enable to send SMS alerts for call-outs)
GIGI_OPERATIONS_SMS_ENABLED=false

# Gigi Test Endpoints (Enable in development only)
GIGI_ENABLE_TEST_ENDPOINTS=false

# Escalation Contacts (RingCentral Extensions)
ESCALATION_CYNTHIA_EXT=105
ESCALATION_JASON_EXT=101

# WellSky Home Connect API (OAuth 2.0)
# Get from: WellSky support (contact your account manager)
# Documentation: https://connect.clearcareonline.com/fhir/
# CRITICAL: When adding WELLSKY_CLIENT_ID, also set GIGI_OPERATIONS_SMS_ENABLED=true
WELLSKY_CLIENT_ID=your-wellsky-oauth-client-id
WELLSKY_CLIENT_SECRET=your-wellsky-oauth-client-secret
WELLSKY_AGENCY_ID=your-wellsky-agency-id
WELLSKY_ENVIRONMENT=production  # or "sandbox" for testing
WELLSKY_API_MODE=connect  # connect (default) or legacy (api.clearcareonline.com)

# Legacy variable names (backward compatibility - will be removed)
# WELLSKY_API_KEY=your-wellsky-oauth-client-id
# WELLSKY_API_SECRET=your-wellsky-oauth-client-secret

# -----------------------------------------------------------------------------
# MARKETING DASHBOARD (/marketing)
# -----------------------------------------------------------------------------

# Google Analytics 4
# Get from: https://analytics.google.com/analytics/web/#/a{account}p{property}/admin/streams/table/
GA4_PROPERTY_ID=your-ga4-property-id

# Google Business Profile (GBP) - formerly Google My Business
# Get from: https://business.google.com/
GBP_LOCATION_IDS=comma,separated,location,ids

# Google Ads API
# Get from: https://ads.google.com/aw/apicenter
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
GOOGLE_ADS_CUSTOMER_ID=1234567890
GOOGLE_ADS_REFRESH_TOKEN=your-refresh-token
GOOGLE_ADS_OAUTH_CLIENT_ID=your-oauth-client-id
GOOGLE_ADS_OAUTH_CLIENT_SECRET=your-oauth-client-secret

# Google Service Account (for GA4, GBP APIs)
# Same as GOOGLE_SERVICE_ACCOUNT_KEY above - uses shared service account
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# LinkedIn Marketing API
# Get from: https://www.linkedin.com/developers/apps
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# Pinterest API
# Get from: https://developers.pinterest.com/apps/
PINTEREST_ACCESS_TOKEN=your-pinterest-access-token

# TikTok Ads API
# Get from: https://ads.tiktok.com/marketing_api/docs
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token
TIKTOK_ADVERTISER_ID=your-advertiser-id

# -----------------------------------------------------------------------------
# RINGCENTRAL EMBED (Portal Phone Widget)
# -----------------------------------------------------------------------------

# RingCentral Embed SDK (in-app phone dialer)
# Get from: https://developers.ringcentral.com/my-account.html
RINGCENTRAL_EMBED_CLIENT_ID=your-ringcentral-embed-client-id
RINGCENTRAL_EMBED_SERVER=https://platform.ringcentral.com
RINGCENTRAL_EMBED_APP_URL=https://careassist-unified-0a11ddb45ac0.herokuapp.com
RINGCENTRAL_EMBED_ADAPTER_URL=https://careassist-unified-0a11ddb45ac0.herokuapp.com/ringcentral-adapter
RINGCENTRAL_EMBED_DEFAULT_TAB=messages
RINGCENTRAL_EMBED_REDIRECT_URI=https://careassist-unified-0a11ddb45ac0.herokuapp.com/ringcentral-callback

# -----------------------------------------------------------------------------
# OPTIONAL INTEGRATIONS
# -----------------------------------------------------------------------------

# Mailchimp (if used instead of Brevo)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_SERVER_PREFIX=us1
MAILCHIMP_LIST_ID=your-list-id

# SendGrid (if used instead of Brevo)
SENDGRID_API_KEY=your-sendgrid-api-key

# Twilio (if used instead of RingCentral)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# DEVELOPMENT / DEBUGGING
# -----------------------------------------------------------------------------

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug Mode (set to true for local development)
DEBUG=true

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# HEROKU-SPECIFIC (set via `heroku config:set` not in .env)
# -----------------------------------------------------------------------------

# Heroku automatically sets these - DO NOT set manually:
# - PORT (Heroku assigns dynamically)
# - DATABASE_URL (Heroku Postgres add-on)
# - DYNO (Heroku sets this)
# - HEROKU_APP_NAME (Heroku sets this)

# For multiple databases on Heroku, use:
# heroku addons:attach postgresql-xxx-xxxx --as SALES_DATABASE -a careassist-unified
# heroku addons:attach postgresql-yyy-yyyy --as RECRUITING_DATABASE -a careassist-unified
